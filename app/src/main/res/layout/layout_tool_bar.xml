<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorAccent"
    app:popupTheme="@style/BaseTheme.ToolBar.PopupMenu"
    app:theme="@style/BaseTheme.ToolBar"
    app:title="@string/app_name"
    app:titleTextAppearance="@style/BaseTheme.ToolBar.Title">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/app_white_ff"
        android:textSize="@dimen/actionBarTextSize"
        tools:text="@string/app_name"
        tools:textColor="@color/app_text_light" />

</androidx.appcompat.widget.Toolbar>